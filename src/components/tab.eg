component Tab2:
   mixins = {MasterEvents}
   get-initial-state() = {
      active = @props.master.focus === @props.view
   }
   master-events() = {
      set-focus(view) =
         @set-state with {active = view === @props.view}
   }
   render() =
      .tab-window %
         class-name = if{@state.active, .active, ""}
         Messages2 %
            master = @props.master
            view = @props.view
         Users2 %
            master = @props.master
            view = @props.view
         Input2 %
            master = @props.master
            view = @props.view
